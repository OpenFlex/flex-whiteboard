<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:st="library://ns.tink.ws/flex/spark">
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
	</s:layout>
	
	<s:Label text="Use the slider to update the progress"/>
	
	<s:HSlider id="input" minimum="0" maximum="100"/>
	
	<st:ProgressIndicator total="100" value="{input.value}"/>
	
	<st:ProgressIndicator total="100" value="{input.value}"
						  skinClass="ws.tink.spark.skins.controls.ProgressIndicatorWedgeSkin"/>
	
</s:Application>
